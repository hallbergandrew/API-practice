<h1> Addressbook all </h1>
<ul>
<% @addressbooks.each do |person| %>
  <%= link_to "#{person.lastname}, #{person.firstname}", addressbook_path(person) %><br>

  <% end %>
</ul>
<%= link_to "Create new contact", new_addressbook_path %><br>

<%= link_to "See all messages", messages_path %>


<p> Mass Text </p>



  <% @addressbooks.each do |addressbook| %>

<%= form_for @message do |f| %>
      <div class="form group">
        <%= f.label :body %>
        <%= f.text_field :body %>
      </div>
        <div class="form-group">
     <%= f.hidden_field :to, :value => addressbook.number %>
        </div>
        <div class="form-group">
     <%= f.hidden_field :from, :value => "3605249359" %>
        </div>
         <div class="form-group">
     <%= f.hidden_field :addressbook_id, :value => addressbook.id %>
        </div>
      <%= f.submit "Send message" %>

    <% end %><br>
<% end %>
